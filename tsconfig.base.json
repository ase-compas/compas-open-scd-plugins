{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@openscd/core/*": ["submodules/openscd/packages/core/*"],
      "@openscd/open-scd/*": ["submodules/openscd/packages/openscd/*"],
      "@openscd/xml": ["submodules/openscd/packages/xml"],
      "@openscd/core": ["submodules/openscd/packages/core"],
      "@openscd/plugins/*": ["submodules/openscd/packages/oscd-official-plugins/apps/plugins/*"]
    }
  },
  "include": ["./apps/plugins/src/**/*.ts"]
}
